{
  "image": "mcr.microsoft.com/devcontainers/python:3",
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
      "version": "prerelease"
    }
  },
  "forwardPorts": [
    8888
  ],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter"
      ]
    }
  },
  "postCreateCommand": "python3 -m pip install uv && uv sync && .venv/bin/ipython kernel install --name 'python3' --user"
}
